{
  "extends": [
    // Inherits recommended rules from Create React App
    "react-app",

    // Applies recommended best practices for React components
    "plugin:react/recommended",

    // Applies accessibility best practices for JSX (e.g., using alt attributes)
    "plugin:jsx-a11y/recommended",

    // Enforces correct and optimized usage of React Hooks like useEffect, useState
    "plugin:react-hooks/recommended",

    // Adds linting for import/export syntax (e.g., flagging unresolved imports)
    "plugin:import/errors",

    // Adds extra warnings for potentially problematic import/export usage
    "plugin:import/warnings",

    // Integrates Prettier with ESLint â€” disables ESLint rules that conflict with Prettier,
    // and shows Prettier formatting issues as ESLint errors
    "plugin:prettier/recommended"
  ],

  "rules": {
    // Warns (but doesn't error) when you declare a variable and don't use it
    "no-unused-vars": "warn",

    // Disables PropTypes validation (useful if you're using TypeScript or prefer not to use PropTypes)
    "react/prop-types": "off",

    // React 17+ no longer requires `import React from 'react'` in every file that uses JSX
    "react/react-in-jsx-scope": "off",

    // Enforces a consistent order for imports (helps readability)
    "import/order": [
      "warn", // Shows a warning if import order is not respected
      {
        // Specifies import groups and their order
        "groups": ["builtin", "external", "internal"],
        // Ensures a newline is added between each group for better clarity
        "newlines-between": "always"
      }
    ],

    // Treats Prettier formatting issues as actual ESLint errors (helps enforce clean code)
    "prettier/prettier": ["error"]
  },

  "plugins": [
    // ESLint plugin for React-specific linting
    "react",

    // ESLint plugin for JSX accessibility checks (e.g., labels on form elements)
    "jsx-a11y",

    // ESLint plugin to improve handling and order of import/export statements
    "import",

    // ESLint plugin to integrate Prettier formatting rules
    "prettier"
  ],

  "settings": {
    "react": {
      // Automatically detect the React version you're using (prevents version mismatch issues)
      "version": "detect"
    }
  }
}
